{
  "preset": "jest-expo",
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
  "transformIgnorePatterns": [
    "node_modules/(?!(react-native|@react-native|@react-navigation|react-redux|@reduxjs/toolkit|expo|@expo|expo-modules-core|@testing-library)/)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/index.{js,ts}",
    "!src/**/*.stories.{js,jsx,ts,tsx}",
    "!node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 60,
      "statements": 60
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}